<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFlipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f5f5f5">

    <!-- Screen 0: Login -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RN Agent"
            android:textColor="#212121"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#1976D2"
            android:paddingHorizontal="40dp"
            android:paddingVertical="14dp" />

        <!-- Device code panel (initially hidden) -->
        <LinearLayout
            android:id="@+id/deviceCodePanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/deviceCodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open ai.connect-screen.com/device and enter:"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <TextView
                android:id="@+id/deviceCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.3"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/deviceCodeHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiting for approval..."
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/cancelLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#D32F2F"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Error panel (initially hidden) -->
        <LinearLayout
            android:id="@+id/loginErrorPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code expired or failed. Try again."
                android:textColor="#D32F2F"
                android:textSize="13sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/retryLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:textColor="#1976D2"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Screen 1: Task -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header row -->
        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RN Agent"
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Agent mode selector -->
            <Spinner
                android:id="@+id/agentSpinner"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#e0e0e0"
                android:popupBackground="#ffffff"
                android:paddingHorizontal="10dp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <!-- Task input row -->
        <LinearLayout
            android:id="@+id/taskInputRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/taskInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter task..."
                android:textColorHint="#999999"
                android:textColor="#212121"
                android:background="#ffffff"
                android:padding="10dp"
                android:textSize="14sp"
                android:maxHeight="80dp"
                android:inputType="textMultiLine"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="#1976D2"
                android:paddingHorizontal="16dp"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Voice status bar -->
        <LinearLayout
            android:id="@+id/voiceStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#E8F5E9"
            android:padding="6dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <View
                android:id="@+id/voiceStatusDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#4CAF50" />

            <TextView
                android:id="@+id/voiceStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Listening..."
                android:textColor="#388E3C"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/micToggleBtn"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Mic OFF"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:background="#F44336"
                android:paddingHorizontal="10dp"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Real-time transcription text -->
        <TextView
            android:id="@+id/transcriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF8E1"
            android:padding="6dp"
            android:textColor="#795548"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:maxLines="3"
            android:ellipsize="start"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- Browser WebView (hidden by default) -->
        <android.webkit.WebView
            android:id="@+id/browserWebView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <!-- Browser bottom bar (hidden by default) -->
        <LinearLayout
            android:id="@+id/browserBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:padding="4dp"
            android:visibility="gone">

            <Button
                android:id="@+id/browserBackBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="\u2190"
                android:textSize="18sp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="0dp" />

            <Button
                android:id="@+id/browserFwdBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="\u2192"
                android:textSize="18sp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="0dp" />

            <EditText
                android:id="@+id/browserUrlInput"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:inputType="textUri"
                android:hint="Search or URL"
                android:textSize="13sp"
                android:textColor="#212121"
                android:textColorHint="#999999"
                android:background="#f0f0f0"
                android:paddingHorizontal="8dp"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/browserGoBtn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Go"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="#1976D2"
                android:paddingHorizontal="12dp"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- Logs (visible by default) -->
        <ScrollView
            android:id="@+id/logScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:padding="8dp">

            <TextView
                android:id="@+id/logText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:fontFamily="monospace"
                android:textSize="11sp"
                android:lineSpacingExtra="4dp"
                android:text="Enter a task and tap Send" />
        </ScrollView>
    </LinearLayout>
    <!-- Screen 2: Model Download -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Model Setup"
            android:textColor="#212121"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/downloadStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download ASR model (~1.8 GB) for voice recognition?"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/downloadProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="0"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/downloadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:background="#1976D2"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="12dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/skipDownloadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="#666666"
                android:textSize="16sp"
                android:background="#e0e0e0"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</ViewFlipper>
